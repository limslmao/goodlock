<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorType"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FC090909"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#FDFBFB"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout6"
        android:gravity="center"
        tools:layout_editor_absoluteY="75dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/UseTeach"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonstyle_home"
                    android:drawableBottom="@drawable/teach72"
                    android:onClick="onclick"
                    android:shadowDx="20"
                    android:text="@string/Use_Teach"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/linkPC"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonstyle_home"
                    android:drawableBottom="@drawable/connect72"
                    android:onClick="onclick"
                    android:text="@string/linkPC"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Qlogin"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonstyle_home"
                    android:drawableBottom="@drawable/login72"
                    android:onClick="onclick"
                    android:text="@string/Qlogin"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/set"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonstyle_home"
                    android:drawableBottom="@drawable/setting72"
                    android:onClick="onclick"
                    android:text="@string/Set"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aboutUs"
                    android:layout_width="320dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonstyle_home"
                    android:drawableBottom="@drawable/about72"
                    android:onClick="onclick"
                    android:text="@string/about_us"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</RelativeLayout>