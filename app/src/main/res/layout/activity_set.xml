<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorType">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textSet"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#000000"
            android:gravity="center"
            android:text="@string/Set"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinerLayoutweight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_switch"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="618dp">

                <TextView
                    android:id="@+id/textKey"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_weight="3"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:onClick="ChangeKey"
                    android:paddingStart="60dp"
                    android:paddingEnd="0dp"
                    android:text="@string/changeKey"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/Continue"
                    android:onClick="ChangeKey"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/back_gg" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="135dp">

            <Switch
                android:id="@+id/switchFloat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_switch"
                android:onClick="Switch"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:text="@string/floatView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FloatHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:text="@string/FloatHint"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="206dp">

            <Switch
                android:id="@+id/switchCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_switch"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:text="@string/doubleCheck"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textSetHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@color/colorType"
                android:text="@string/SetHint"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="264dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"/>

    </LinearLayout>

    <Button
        android:id="@+id/SetBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/abc"
        android:onClick="Back"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="25dp" />

</RelativeLayout>