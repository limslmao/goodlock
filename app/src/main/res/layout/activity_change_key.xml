<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorType"
    tools:context=".ChangeKey">

    <Button
        android:id="@+id/ChangeBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/abc"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="25dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textChange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center|center_vertical"
            android:text="@string/changeKey"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="120dp"
            android:paddingEnd="120dp">

            <TextView
                android:id="@+id/ChangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorType"
                android:text="@string/hint"
                android:textColor="#000000"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="208dp" />

            <EditText
                android:id="@+id/ChangeKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="8"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="250dp" />

            <TextView
                android:id="@+id/ChangeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/colorType"
                android:text="@string/hint2"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="309dp" />

            <Button
                android:id="@+id/ChangeOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:background="@drawable/buttonstyle"
                android:text="@string/confirm"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="585dp" />

            <TextView
                android:id="@+id/ChangeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ChangeOk"
                android:layout_marginTop="20dp"
                android:text="@string/description"
                android:textColor="#BF000000"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="378dp" />

            <TextView
                android:id="@+id/ChangeDescription1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ChangeDescription"
                android:layout_marginTop="10dp"
                android:background="@color/colorType"
                android:text="@string/description5"
                android:textColor="#B2000000"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="429dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>